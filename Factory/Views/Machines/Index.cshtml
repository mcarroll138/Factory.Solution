@{
  Layout = "_Layout";
}

@using Factory.Models

<h1>Engineers List</h1>

@if (@Model.Count == 0)
{
  <h3>No Engineers are currently in your system</h3>
}

<ul>
  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId})</li>
  }
</ul>

<p>@Html.ActionLink("Add a new engineer", "Create")</p>
<p>@Html.ActionLink("Add a new piece of machinery", "Create", "Machines")</p>