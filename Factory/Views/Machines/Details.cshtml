@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;
@using Factory.Models;
@using System.Collections.Generic;

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(m => m.Name) : @Html.DisplayFor(m => m.Name)</h3>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This Machine does not contain qaulified engineers.</p>
}
else
{
  <h4>Engineers qualified to work on this machine:</h4>
  <ul>

  @foreach (EngineerMachine join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{join.Engineer.Name}", "Details", "Engineers", new { id = join.Engineer.EngineerId})
      </li>
    }
  </ul>
}

@Html.ActionLink("Home", "Index", "Home")
<br>
