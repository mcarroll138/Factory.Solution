@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;
@using Factory.Models;
@using System.Collections.Generic;

<h2>Engineer Details</h2>
<hr />
<h3>@Html.DisplayNameFor(m => m.Name) : @Html.DisplayFor(m => m.Name)</h3>
<h3>@Html.DisplayNameFor(m => m.Description) : @Html.DisplayFor(m => m.Description)</h3>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This Engineer is not qualified to work on any machines.</p>
}
else
{
  <h4>Qualified to repair on the following machines:</h4>
  <ul>

  @foreach (EngineerMachine join in Model.JoinEntities)
    {
      <li>Machine: @join.Machine.Name</li>
      @using (Html.BeginForm("DeleteJoin", "Engineers"))
      {
        @Html.Hidden("joinId", @join.EngineerMachineId)
        <input type="submit" value="Delete" />
      }
    }
  </ul>
}
</ul>

